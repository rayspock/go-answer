        "exception.HTTPError": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "example": 400
                },
                "message": {
                    "type": "string",
                    "example": "status bad request"
                }
            }
        },
        "models.Answer": {
            "type": "object",
            "required": [
                "key",
                "value"
            ],
            "properties": {
                "key": {
                    "type": "string",
                    "example": "name"
                },
                "value": {
                    "type": "string",
                    "example": "John"
                }
            }
        },
        "models.AnswerPayload": {
            "type": "object",
            "required": [
                "value"
            ],
            "properties": {
                "value": {
                    "type": "string",
                    "example": "John"
                }
            }
        },
        "models.History": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/models.Answer"
                },
                "event": {
                    "type": "string",
                    "example": "create"
                }
            }
        }
    }
