                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "get answer by Key",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Answer key",
                        "name": "key",
                        "in": "path",
                        "required": true
