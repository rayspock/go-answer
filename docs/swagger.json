            "put": {
                "description": "update answer",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "update answer",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Answer key",
                        "name": "key",
                        "in": "path",
