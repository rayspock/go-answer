            "get": {
                "description": "get history for given key (returns an array of events in chronological order)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "get answer's history by key",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Answer key",
                        "name": "key",
